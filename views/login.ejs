<!DOCTYPE html>
<html>
  <head>
    <title>Login for <%=shopData.shopName%></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Login for <%=shopData.shopName%></h1>
    <!-- form to login users using username and password fields -->
    <form method="POST" action="/users/loggedin">
      <p>
        Username:
        <input
          id="username"
          type="text"
          name="username"
          maxlength="50"
          required
        />
      </p>
      <p>
        Password:
        <input id="password" type="password" name="password" required />
      </p>
      <input type="submit" value="Login" />
    </form>
  </body>
</html>
